{
  "manifest_version": 3,
  "name": "grepl",
  "version": "1.0",
  "description": "Advanced page search with regex support and highlighting",
  
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "action": {
    "default_title": "grepl Search",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-chrome.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background-chrome.js"
  },
  
  "commands": {
    "toggle-search": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Toggle grepl search"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": ["popup-chrome.html", "popup-chrome.js", "popup.css"],
      "matches": ["<all_urls>"]
    }
  ]
}