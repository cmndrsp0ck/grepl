{
  "manifest_version": 2,
  "name": "GrepFox",
  "version": "1.0",
  "description": "Advanced page search with regex support and highlighting",
  
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "GrepFox Search",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "commands": {
    "toggle-search": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Toggle GrepFox search"
    }
  },
  
  "web_accessible_resources": [
    "popup.html",
    "popup.js",
    "popup.css"
  ]
}