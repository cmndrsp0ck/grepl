{
  "manifest_version": 2,
  "name": "grepl",
  "version": "1.0",
  "description": "Advanced page search with regex support and highlighting",
  
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "<all_urls>"
  ],
  
  "browser_action": {
    "default_title": "grepl Search",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  
  "background": {
    "scripts": ["background-firefox.js"]
  },
  
  "commands": {
    "toggle-search": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Toggle grepl search"
    }
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "grepl@example.com"
    }
  }
}